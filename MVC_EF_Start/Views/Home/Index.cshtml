    @{
        List<Exam> data = ViewBag.e1;
        
        if (data != null)
        {

            @for (int i = 0; i < data.Count; i++)
            {
                <h1>@(i+1)</h1>


                <div class="container1">
                    <div class="header">
                        <h2>@data[i].mean_scale_score</h2>
                    </div>
                    <div id="levels">
                        <p style="float:left; padding-left: 29px;"><strong>Levels:</strong></p>
                        <div style="float:left;padding-top:20px">
                            <p>@data[i].level_1_1</p>
                            <p>@ViewBag.level_1_2</p>
                            <p>@ViewBag.level_2_1</p>
                        </div>
                    </div>
                 
                    <form asp-controller="Home" asp-action="create" method="get">
                        <button class="btn btn-success" type="submit" name="examID" value=@data[i].examID asp-controller="Home" asp-action="create" style="float:inline-start;font-size: 15px;margin-left:10px;border-radius:150px;">Create</button>
                    </form>
                    <form>
                        <button type="submit" class="btn btn-primary btn-sm" name="examID" value=@data[i].examID asp-controller="Home" asp-action="update" style="float:left; margin-left:10px;border-radius:150px;">Update Details</button>
                    </form>
                    <form asp-controller="Home" asp-action="DeletePark" method="get">
                        <button type="submit" class="btn btn-danger" name="examID" value=@data[i].examID asp-controller="Home" asp-action="delete" style="float:right; border-radius:150px;margin-right:18px;">Delete info</button>
                    </form>
                </div>

            }
        }
    }
